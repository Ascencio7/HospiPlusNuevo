<Window x:Class="HospiPlus.ReporteVista.frmReporteExpedientePaciente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospiPlus.ReporteVista"
        mc:Ignorable="d"
        Title="HOSPI PLUS | Sistema Secretario" Height="300" Width="434" WindowStartupLocation="CenterScreen" Icon="/hospi plus.png">
    <Grid  Height="278" VerticalAlignment="Top">
        <Label Content="Generar Reporte para expediente de pacientes:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,48,0,0"/>

        <TextBox x:Name="txtPacienteID" Width="200" Height="30" Margin="0,109,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" />

        <Button x:Name="btnGenerarReporte" Content="Generar Reporte" Width="150" Height="30" Margin="0,186,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="btnGenerarReporte_Click" Background="#4CAF50" Foreground="White" />

        <Label x:Name="lblStatus" Content="" Margin="0,130,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Foreground="Green"/>
    </Grid>
</Window>
